#!/bin/sh -e
. /usr/share/debconf/confmodule

# @todo: remember to keep this updated, sourced from the *.debhelper scripts

if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask 'pamusb-agent.service' >/dev/null || true
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge 'pamusb-agent.service' >/dev/null || true
		deb-systemd-helper unmask 'pamusb-agent.service' >/dev/null || true
	fi
	db_purge
fi

if [ -d /run/systemd/system ]; then
    systemctl --system daemon-reload >/dev/null || true
fi

exit 0